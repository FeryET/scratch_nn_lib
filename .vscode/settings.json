{
    "python.pythonPath": "venv/bin/python",
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": ["--max-line-length", "90", "--experimental"],
    "python.workspaceSymbols.exclusionPatterns": [
        "**/site-packages/**",
        "./data/"
    ],
    "python.linting.enabled": true
}